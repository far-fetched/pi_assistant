<div class="mx-auto md:w-2/3 w-full">
  <div id="actions">
    <%= render @actions %>
  </div>
  <h1 class="font-bold text-4xl">New action</h1>

  <%= form_with(url: new_action_path, method: :get, class: "contents", data: {
    controller: "action",
    action: "input->action#submit",
    turbo_frame: "commands",
  }) do |form| %>
    <div class="my-5">
      <%= form.label :service %>
      <%= form.select :service, @services, { include_blank: "choose service..." }, { class: "rounded-md w-full mt-2" } %>
    </div>
  <% end %>
  <%= turbo_frame_tag "commands" %>
</div>
